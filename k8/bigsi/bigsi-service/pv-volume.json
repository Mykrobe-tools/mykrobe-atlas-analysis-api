{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "pv-volume-for-mykrobe-atlas-bigsi",
        "labels": {
            "type": "local"
        },
        "namespace": "mykrobe"
    },
    "spec": {
        "storageClassName": "manual",
        "capacity": {
            "storage": "10Gi"
        },
        "accessModes": [
            "ReadWriteOnce"
        ],
        "hostPath": {
            "path": "/data/bigsi"
        }
    }
}