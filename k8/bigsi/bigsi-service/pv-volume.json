{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "pv-volume-for-mykrobe-atlas-bigsi"
    },
    "spec": {
        "accessModes": [
            "ReadWriteOnce"
        ],
        "capacity": {
            "storage": "3Gi"
        },
        "hostPath": {
            "path": "/data/bigsi"
        },
        "storageClassName": "manual"
    }
}