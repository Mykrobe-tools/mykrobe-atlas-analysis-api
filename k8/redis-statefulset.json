{
  "apiVersion": "apps/v1beta2",
  "kind": "StatefulSet",
  "metadata": {
    "name": "redis"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "redis"
      }
    },
    "serviceName": "redis",
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "redis"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "redis",
            "image": "redis:4.0",
            "imagePullPolicy": "Always",
            "ports": [
              {
                "containerPort": 6379,
                "name": "redis"
              }
            ]
          }
        ]
      }
    }
  }
}